{
    "name": "Python Dev Container",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "GitHub.copilot"
    ],
    "postCreateCommand": "pip install -r requirements.txt",
    "remoteUser": "appuser"
}